---
title: Post
metadescription: Post
layout: layout.njk
date: 2021-03-11T20:46:01.069Z
poster:
requiredmessage: This field is required.
successmessage: Comment was posted.
labelname: Name
labelcomment: Comment
labelbutton: Submit
labelnocomments: No comment yet. Be the first.
---
<article>
    {% if poster %}
    <img src="{{ poster }}" alt="{{ title }}" />
    {% endif %}
    <h1>{{ title }}</h1>
    <p><strong>{{ page.date.toLocaleDateString('en', {year: 'numeric', month: 'long', day: 'numeric'}) }}</strong></p>
    <p>{{ metadescription }}</p>
    {{ content | safe }}
</article>
<link rel="stylesheet" href="/css/comments.css">
<h2>Comments</h2>
<div id="comments-list">
    <p>{{ labelnocomments}}</p>
</div>
<h3>New comment</h3>
<div>
    <form name="comments-{{ page.fileSlug }}" method="POST" data-netlify="true" action="{{ page.url }}?success=yes" netlify-honeypot="dob" required-message="{{ requiredmessage }}" success-message="{{ successmessage }}">
        <label for="name">{{ labelname }}</label>
        <input type="text" name="name" id="name">
        <label for="dob">Date of birth</label>
        <input type="text" name="dob" id="dob">
        <label for="comment">{{ labelcomment }}</label>
        <textarea name="comment" id="comment"></textarea>
        <div>
            <button type="submit">{{ labelbutton }}</button>
        </div>
    </form>
</div>
<script type="module" src="/js/comments.js"></script>

